{
  "name": "@automattic/vip-go-harmonia",
  "version": "0.0.1",
  "description": "Provide a set of automated tests (or checks) that can test and validate the application functionality and responsiveness with an environment as close to production as possible, before the actual deployment to an environment.",
  "main": "dist/index.js",
  "bin": {
    "harmonia": "dist/cli.js",
    "harmonia-ci": "dist/ci.js"
  },
  "scripts": {
    "exec": "ts-node src/index.ts",
    "exec:debug": "DEBUG=* npm run exec",
    "test": "npm run check-types && npm run lint && jest",
    "check-types": "tsc",
    "build": "babel src -d dist --extensions '.ts,.js' --copy-files --no-copy-ignored && chmod +x dist/cli.js dist/ci.js",
    "build:watch": "babel src -d dist --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts --max-warnings=0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Automattic/vip-go-harmonia.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Automattic/vip-go-harmonia/issues"
  },
  "homepage": "https://github.com/Automattic/vip-go-harmonia#readme",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.26.0",
    "eslint-config-wpvip": "github:automattic/eslint-config-wpvip#252c443",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-async-foreach": "^0.1.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-wpcalypso": "^5.0.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.1",
    "@types/valid-url": "^1.0.3",
    "chalk": "^4.1.2",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.1",
    "debug": "^4.3.3",
    "dotenv": "^16.0.0",
    "execa": "^5.1.1",
    "get-urls": "^10.0.1",
    "github-api": "^3.4.0",
    "lodash.snakecase": "^4.1.1",
    "node-fetch": "^2.6.7",
    "semver": "^7.3.5",
    "strip-ansi": "^6.0.1",
    "supports-color": "^9.2.1",
    "ts-md5": "^1.2.11",
    "valid-url": "^1.0.9"
  }
}
